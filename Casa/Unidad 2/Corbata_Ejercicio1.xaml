<Window x:Class="Casa.Unidad_2.Corbata_Ejercicio1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Casa.Unidad_2"
        mc:Ignorable="d"
        Title="Corbata_Ejercicio1" Height="450" Width="800">
    <Canvas>
        <Path Stroke="Black" StrokeThickness="1"
              Data="M100,300 150,350 200,300 180,100
              200,50 180,30 130,30 110,50 130,100 100,300 z">
            <Path.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Brown" Offset="0.10"/>
                    <GradientStop Color="White" Offset="0.15"/>
                    <GradientStop Color="Maroon" Offset="0.25"/>
                    <GradientStop Color="Brown" Offset="0.35"/>
                    <GradientStop Color="White" Offset="0.45"/>
                    <GradientStop Color="Maroon" Offset="0.55"/>
                    <GradientStop Color="Brown" Offset="0.65"/>
                    <GradientStop Color="White" Offset="0.75"/>
                    <GradientStop Color="Maroon" Offset="0.85"/>
                    <GradientStop Color="Brown" Offset="1"/>
                </LinearGradientBrush>
            </Path.Fill>
        </Path>
    </Canvas>
</Window>
