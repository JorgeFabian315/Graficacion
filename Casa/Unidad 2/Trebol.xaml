<Window x:Class="Casa.Unidad_2.Trebol"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Casa.Unidad_2"
        mc:Ignorable="d"
        Title="Trebol" Height="450" Width="800">
    <Canvas>
        <Canvas.Background>
            <VisualBrush Viewport="0,0 0.5 0.5"
                         TileMode="FlipY"
                         Viewbox="0,0 1 1"
                         Stretch="None">
                <VisualBrush.Visual> 
                    <Path Fill="Green" Stroke="Black" StrokeThickness="1"
              Data="M315,370 385,370 370,320 A40,40 0 1 0 
              380,250 A40,40 0 1 0 320,250 A40,40 0 1 0 330,320 z" >
                        <Path.Effect>
                            <DropShadowEffect BlurRadius="20"/>
                        </Path.Effect>
                    </Path>
                </VisualBrush.Visual>  
            </VisualBrush>
        </Canvas.Background>
       
    </Canvas>
</Window>
